# Database Configuration for HelioHost MariaDB
DB_HOST=localhost
DB_USER=your_heliohost_db_username
DB_PASSWORD=your_heliohost_db_password
DB_NAME=your_heliohost_db_name

# Security Configuration
JWT_SECRET_KEY=your_super_secure_jwt_secret_key_here_minimum_32_characters
API_SECRET_KEY=your_api_secret_key_for_additional_security

# Rate Limiting Configuration
LOCKOUT_THRESHOLD=5
LOCKOUT_DURATION=1800

# CORS Configuration - Use your FRONTEND domains that will call this API
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Environment
ENVIRONMENT=production
DEBUG=False

# Optional: Email Configuration (for future features like password reset)
# SMTP_SERVER=mail.heliohost.org
# SMTP_PORT=587
# SMTP_USERNAME=your_email@yourdomain.com
# SMTP_PASSWORD=your_email_password

# Optional: Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/home/yourusername/logs/api.log